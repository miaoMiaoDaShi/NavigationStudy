    <fragment
        android:id="@+id/mainPage2Fragment"
        android:name="com.yangyan.xxp.navigationstudy.fragment.MainPage2Fragment"
        android:label="MainPage2Fragment" >
        <action
            android:id="@+id/action_mainPage2Fragment_to_mainPage3Fragment"
